[
  {
    "name": "keyword",
    "regex": "\\b(if|else|while|for|do|break|continue|return|switch|case|default|try|catch|finally|throw)\\b",
    "flex": "\b(if|else|while|for|do|break|continue|return|switch|case|default|try|catch|finally|throw)\b",
    "scope": "keyword.control"
  },
  {
    "name": "keywordType",
    "regex": "\\b(int|string|bool|float|char|void)\\b",
    "flex": "\b(int|string|bool|float|char|void)\b",
    "scope": "storage.type"
  },
  {
    "name": "keywordOther",
    "regex": "\\b(class|struct|static|new|func|var|let|base|using|import|module|export|async|await|Task|TaskResult)\\b",
    "flex": "\b(class|struct|static|new|func|var|let|base|using|import|module|export|async|await|Task|TaskResult)\b",
    "scope": "keyword.other"
  },
  {
    "name": "keywordLiteral",
    "regex": "\\b(true|false)\\b",
    "flex": "\b(true|false)\b",
    "scope": "constant.language"
  },
  {
    "name": "number",
    "regex": "\\b([0-9]+\\\\.[0-9]+|[0-9]+)\\b",
    "flex": "\b([0-9]+\\\\.[0-9]+|[0-9]+)\b",
    "scope": "constant.numeric"
  },
  {
    "name": "string",
    "regex": "\\\"([^\\\\\\\"\\\\n]|\\\\\\\\.)*\\\"",
    "scope": "string.quoted.double"
  },
  {
    "name": "char",
    "regex": "'([^'\\\\n]|\\\\\\\\.)'",
    "scope": "string.quoted.single"
  },
  {
    "name": "commentDoc",
    "regex": "/\\*\\*[^]*?\\*/|///.*",
    "scope": "comment.block.documentation"
  },
  {
    "name": "comment",
    "regex": "//.*",
    "scope": "comment.line.double-slash"
  },
  {
    "name": "commentBlock",
    "regex": "/\\*[\\s\\S]*?\\*/",
    "scope": "comment.block"
  },
  {
    "name": "consoleFunction",
    "regex": "\\b(Console)\\.(WriteLine|Write|ReadLine)\\b",
    "scope": "support.function"
  },
  {
    "name": "identifier",
    "regex": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
    "flex": "\b[a-zA-Z_][a-zA-Z0-9_]*\b",
    "scope": "variable.other"
  },
  {
    "name": "operatorArithmetic",
    "regex": "\\+\\+|--|\\+=|-=|\\*=|/=|%=|\\+|-|\\*|/|%",
    "scope": "keyword.operator.arithmetic"
  },
  {
    "name": "operatorBitwise",
    "regex": "&=|\\|=|\\^=|<<=|>>=|&|\\||\\^|<<|>>|~",
    "scope": "keyword.operator.bitwise"
  },
  {
    "name": "operatorComparison",
    "regex": "<=|>=|==|!=|<|>",
    "scope": "keyword.operator.comparison"
  },
  {
    "name": "operatorLogical",
    "regex": "&&|\\|\\||!",
    "scope": "keyword.operator.logical"
  },
  {
    "name": "operatorAssignment",
    "regex": "=",
    "scope": "keyword.operator.assignment"
  },
  {
    "name": "operatorConditional",
    "regex": "\\?|\\?\\?|\\?\\?=",
    "scope": "keyword.operator.conditional"
  },
  {
    "name": "operatorArrow",
    "regex": "->|=>",
    "scope": "keyword.operator.arrow"
  },
  {
    "name": "semicolon",
    "regex": ";",
    "scope": "punctuation.terminator.statement"
  },
  {
    "name": "comma",
    "regex": ",",
    "scope": "punctuation.separator.comma"
  },
  {
    "name": "dot",
    "regex": "\\\\.",
    "scope": "punctuation.accessor"
  },
  {
    "name": "paren",
    "regex": "[()]",
    "scope": "punctuation.section.parens"
  },
  {
    "name": "brace",
    "regex": "[{}]",
    "scope": "punctuation.section.braces"
  },
  {
    "name": "bracket",
    "regex": "[\\\\[\\\\]]",
    "scope": "punctuation.section.brackets"
  }
]