{
  "name": "dream-intellisense",
  "displayName": "Dream IntelliSense",
  "version": "0.1.0",
  "description": "Language support and IntelliSense for Dream",
  "publisher": "dream",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onLanguage:dream"
  ],
  "main": "./dist/extension.js",
  "bin": {
    "dream-language-server": "./dist/server.js"
  },
  "contributes": {
    "languages": [
      {
        "id": "dream",
        "aliases": [
          "Dream",
          "dream"
        ],
        "extensions": [
          ".dr"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/DreamScriptLogo.svg",
          "dark": "./icons/DreamScriptLogo.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "dream",
        "scopeName": "source.dream",
        "path": "./syntaxes/dream.tmLanguage.json"
      }
    ],
    "problemMatchers": [
      {
        "name": "dreamcompiler",
        "owner": "dreamcompiler",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    ],
    "taskDefinitions": [
      {
        "type": "dream",
        "required": [
          "file"
        ],
        "properties": {
          "file": {
            "type": "string",
            "description": "The Dream file to compile"
          }
        }
      }
    ]
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "typescript": "~5.4.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.1"
  },
  "repository": ""
}